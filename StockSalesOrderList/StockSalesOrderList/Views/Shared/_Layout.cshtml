<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="referrer" content="no-referrer">
    <title>@ViewBag.Title - @Html.Resource("Messages, ApplicationName")</title>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />
    <link href="http://fonts.googleapis.com/earlyaccess/notosansjp.css" rel="stylesheet" />
    @RenderSection("stylesheet", true)
    @Scripts.Render("~/Scripts/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(Html.ResourceRaw("Messages, ApplicationName"), "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <p class="navbar-text">@Html.Resource("Messages, ApplicationComment")</p>
                <p class="navbar-text" id="loading-bar-container"></p>
                <ul class="nav navbar-nav navbar-right">
                    @Html.Partial("_NavibarSupport")
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>
    <footer id="footer">
        <p>Copyright&copy; 2016,2017 - <a href="https://github.com/minotaka" target="new">Minoru Takayama</a> All Rights Reserved.</p>
    </footer>

    @RenderSection("script", true)
</body>
</html>